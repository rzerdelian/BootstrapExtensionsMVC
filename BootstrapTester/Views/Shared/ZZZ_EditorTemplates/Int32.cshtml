@model object

<div class="form-group @(Html.ValidationErrorFor(m => m, " has-error"))">
    @Html.LabelFor(m => m, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m, null, new { @class = "text-danger" })
    </div>
</div>

